@model BugTracker.ViewModels.TicketsCreateOrEditVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLte.cshtml";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.ticket.Id" />
            <div class="form-group">
                <label asp-for="@Model.ticket.ProjectId" class="control-label"></label>
                <select asp-for="@Model.ticket.ProjectId" class="form-control" asp-items="@Model.Projects"></select>
                <span asp-validation-for="@Model.ticket.ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ticket.Title" class="control-label"></label>
                <input asp-for="@Model.ticket.Title" class="form-control" />
                <span asp-validation-for="@Model.ticket.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ticket.Description" class="control-label"></label>
                <input asp-for="@Model.ticket.Description" class="form-control" />
                <span asp-validation-for="@Model.ticket.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ticket.Priority" class="control-label"></label>
                <select asp-for="@Model.ticket.Priority"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<TicketPriority>()">
                    @*<option>Select Priority</option>*@
                </select>
                <span asp-validation-for="@Model.ticket.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ticket.Severity" class="control-label"></label>
                <select asp-for="@Model.ticket.Severity"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<TicketSeverity>()">
                    @*<option>Select Severity</option>*@
                </select>
                <span asp-validation-for="@Model.ticket.Severity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ticket.DateCreated" class="control-label"></label>
                <input asp-for="@Model.ticket.DateCreated" class="form-control" />
                <span asp-validation-for="@Model.ticket.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ticket.DeveloperId" class="control-label"></label>
                <select asp-for="@Model.ticket.DeveloperId" class="form-control" asp-items="@Model.Developers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
